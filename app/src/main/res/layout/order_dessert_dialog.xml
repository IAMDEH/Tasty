<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="217dp"
        android:layout_height="92dp"
        android:layout_marginStart="48dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/nomod"
        app:srcCompat="@drawable/moussechoco" />

    <TextView
        android:id="@+id/nomod"
        android:layout_width="241dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:gravity="center"
        android:text="Mousse au chocolat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomod" />

    <TextView
        android:id="@+id/prixLabel"
        android:layout_width="217dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="200 DA"
        app:layout_constraintStart_toStartOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center"
        android:text="QuantitÃ©:"
        app:layout_constraintStart_toStartOf="@+id/prixLabel"
        app:layout_constraintTop_toBottomOf="@+id/prixLabel" />

    <EditText
        android:id="@+id/quantite"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/commentaire"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Commentaire:"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="216dp"
        android:layout_height="69dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/commentaire"
        app:layout_constraintTop_toBottomOf="@+id/commentaire" />

</android.support.constraint.ConstraintLayout>